<!-- Contact Form -->
<section class="w-full py-12 md:py-24 lg:py-32 bg-gradient-to-b from-amber-50 to-white dark:from-gray-900 dark:to-gray-800 text-gray-800 dark:text-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl text-center mb-12 text-emerald-600 dark:text-emerald-400">
          Let's Connect
      </h2>
      <div class="grid gap-6 lg:grid-cols-2 lg:gap-12">
          <div class="space-y-6">
              <div class="bg-white dark:bg-gray-800 border border-amber-200 dark:border-gray-700 rounded-lg overflow-hidden shadow-lg">
                  <div class="p-6">
                      <h3 class="text-2xl font-semibold text-emerald-600 dark:text-emerald-400 mb-4">
                          Reach Out Anytime
                      </h3>
                      <p class="text-gray-700 dark:text-gray-300 mb-4">
                          Whether you have a cool project idea, a question, or just want to
                          say hi, I'm always happy to chat!
                      </p>
                      <a href="mailto:hello@example.com" class="flex items-center text-emerald-600 dark:text-emerald-400 hover:underline">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 h-4 w-4">
                              <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                          </svg>
                          hello@example.com
                      </a>
                  </div>
              </div>
              <div class="bg-white dark:bg-gray-800 border border-amber-200 dark:border-gray-700 rounded-lg overflow-hidden shadow-lg">
                  <div class="p-6">
                      <h3 class="text-2xl font-semibold text-emerald-600 dark:text-emerald-400 mb-4">
                          Let's Be Friends
                      </h3>
                      <p class="text-gray-700 dark:text-gray-300 mb-4">
                          Follow me on social media for coding tips, project updates, and
                          maybe a meme or two:
                      </p>
                      <div class="flex space-x-4">
                          <a href="#" class="text-gray-400 hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors">
                              <i class="fab fa-instagram fa-lg"></i>
                              <span class="sr-only">Instagram</span>
                          </a>
                          <a href="#" class="text-gray-400 hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors">
                              <i class="fab fa-twitter fa-lg"></i>
                              <span class="sr-only">Twitter</span>
                          </a>
                          <a href="#" class="text-gray-400 hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors">
                              <i class="fab fa-linkedin fa-lg"></i>
                              <span class="sr-only">LinkedIn</span>
                          </a>
                          <a href="#" class="text-gray-400 hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors">
                              <i class="fab fa-github fa-lg"></i>
                              <span class="sr-only">GitHub</span>
                          </a>
                      </div>
                  </div>
              </div>
          </div>
          <div class="bg-white dark:bg-gray-800 border border-amber-200 dark:border-gray-700 rounded-lg overflow-hidden shadow-lg">
              <div class="p-6">
                  <h3 class="text-2xl font-semibold text-emerald-600 dark:text-emerald-400 mb-4">
                      Drop Me a Line
                  </h3>
                  <form class="space-y-4">
                      <div class="space-y-2">
                          <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Name</label>
                          <input id="name" name="name" type="text" placeholder="Your awesome name" required class="w-full px-3 py-2 bg-amber-50 dark:bg-gray-700 text-gray-800 dark:text-gray-200 placeholder-gray-500 dark:placeholder-gray-400 border border-amber-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-400 dark:focus:ring-emerald-500 focus:border-transparent">
                      </div>
                      <div class="space-y-2">
                          <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                          <input id="email" name="email" type="email" placeholder="you@example.com" required class="w-full px-3 py-2 bg-amber-50 dark:bg-gray-700 text-gray-800 dark:text-gray-200 placeholder-gray-500 dark:placeholder-gray-400 border border-amber-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-400 dark:focus:ring-emerald-500 focus:border-transparent">
                      </div>
                      <div class="space-y-2">
                          <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Subject</label>
                          <input id="subject" name="subject" type="text" placeholder="What's on your mind?" required class="w-full px-3 py-2 bg-amber-50 dark:bg-gray-700 text-gray-800 dark:text-gray-200 placeholder-gray-500 dark:placeholder-gray-400 border border-amber-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-400 dark:focus:ring-emerald-500 focus:border-transparent">
                      </div>
                      <div class="space-y-2">
                          <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Message</label>
                          <textarea id="message" name="message" rows="4" placeholder="Tell me all about it..." required class="w-full px-3 py-2 bg-amber-50 dark:bg-gray-700 text-gray-800 dark:text-gray-200 placeholder-gray-500 dark:placeholder-gray-400 border border-amber-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-400 dark:focus:ring-emerald-500 focus:border-transparent"></textarea>
                      </div>
                      <button type="submit" class="w-full px-4 py-2 bg-emerald-600 text-white rounded-md hover:bg-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-400 focus:ring-offset-2 focus:ring-offset-amber-50 dark:focus:ring-offset-gray-800 transition duration-300">
                          Send Message
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2 h-4 w-4 inline-block">
                              <line x1="22" x2="11" y1="2" y2="13"></line>
                              <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                          </svg>
                      </button>
                  </form>
              </div>
          </div>
      </div>
  </div>
</section>